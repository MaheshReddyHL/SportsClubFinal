@{
    ViewBag.Title = "Club Member Dashboard";
}

<style>
    .backgrd {
        background-image: url('../../images/club member register.jpg');
        background-repeat: space;
        background-repeat: space;
        background-size: 100% 200%;
    }
</style>
<body>
    @if (Session["UserMail"] != null)

    {
        <div class="text-red" style="color: red;position:relative; float: right;">

            Welcome, @Session["UserMail"]!<br />
            UserId: @Session["UserId"]<br />
            <a href="@Url.Action("UserLogin", "Account")" class="btn btn-primary">Logout</a>
        </div>

    }
    <br /><br /><br /><br /><br />
    <h2>Club Member Dashboard</h2>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3>Time Slots</h3>
                <ul class="list-group">
                    <li class="list-group-item">
                        @Html.ActionLink("Book Time Slot", "Index", "TimeSlotRequests", null, new { @class = "btn btn-danger" })
                    </li>
                    <li class="list-group-item">
                        @Html.ActionLink("View Available Time Slots", "MemberTimeSlotIndex", "Member", null, new { @class = "btn btn-info" })
                    </li>
                </ul>
            </div>

            <div class="col-md-6">
                <h3>Membership</h3>
                <ul class="list-group">
                    <li class="list-group-item">
                        @Html.ActionLink("View Membership Rules", "ViewRulesIndex", "Member", null, new { @class = "btn btn-warning" })
                    </li>
                    <li class="list-group-item">
                        @Html.ActionLink("View My Details", "Index", "Users", null, new { @class = "btn btn-success" })
                    </li>
                </ul>
            </div>
        </div>
    </div>
</body>
